{
  "name": "teja-capture",
  "version": "1.0.2",
  "description": "Teja Capture Pro",
  "author": "Teja",
  "main": "main.js",

  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --publish never"
  },

  "dependencies": {
    "electron-log": "^5.1.2",
    "electron-updater": "^6.1.7",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2"
  },

  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0"
  },

  "build": {
    "appId": "com.teja.capture",
    "productName": "Teja Capture Pro",

    "directories": {
      "output": "dist",
      "buildResources": "build"
    },

    "mac": {
      "category": "public.app-category.video",
      "target": ["dmg", "zip"],
      "icon": "build/icon.png",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "NSMicrophoneUsageDescription": "We need access to the microphone to record audio.",
        "NSCameraUsageDescription": "We need access to the camera to record video.",
        "NSScreenCaptureUsageDescription": "We need access to record your screen."
      }
    },

    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    }
  }
}
